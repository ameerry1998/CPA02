<div class="jumbotron">
    <h1>CPA02: Online Journal </h1>
    <p></p>
</div>

<p class="p-3 m-3 border border-primary bg-light">
    This is an online journal to keep track of your thoughts and emotions for the day. 
</p>

<% if (true || loggedIn) {%>
    <div class = 'row'>
        <div class = "col">
            <form method="post" action="/journal/add">
                Input Your Journal Entry Please :)<br><br>
                <input type="date" id="start" name="date" 
                value="2022-05-02" min="2000-01-01" max="2099-12-31" required><br><br>
                <input type="time" name="time" min="00:00" max="23:59"
                        placeholder="e.g. 20:00" required><br><br>
                <select class="emotion" name="emotion" default="Happy">
                    <option value="Happy">Happy</option>
                    <option value="Sad">Sad</option>
                    <option value="Afraid">Afraid</option>
                    <option value="Angry">Angry</option>
                    <option value="Surprised">Surprised</option>
                    <option value="Disgusted">Disgusted</option>
                </select><br><br>
                <input type="text" name="hours_slept"
                        placeholder="hours slept" required><br> <br>
                <textarea type="text" style="width: 100%; height: 50px;" name="journal"
                        placeholder="journal entry" required></textarea><br><br>    
                <input type="submit">
            </form>
        </div>
    </div>
    <hr>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>emotion</th>
                <th>journal</th>
                <th>hours slept</th>
            </tr>
        </thead>
        <tbody></tbody>
        <% for (item of items) {
            const date = item.date;
            const time = item.time;
            const emotion = item.emotion;
            const journal = item.journal;
            const hours_slept = item.hours_slept;
             %>
          <tr class="mb-2"> 
    
            <td>
                <strong><%= item.date %></strong>
                <td>
                    <strong><%= time %></strong>
                </td>
                <td>
                    <strong><%= item.emotion %></strong>
                </td>
                <td>
                    <strong><%= journal %></strong>
                </td>
                <td>
                    <strong><%= item.hours_slept %></strong>
                </td>
            </td>
    
            
        </tr>
        <% } %>
        </tbody>
    </table>
<% } %>